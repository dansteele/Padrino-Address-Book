<!DOCTYPE html>
<html>
<head>
  <title>All people</title>
</head>
<body>
<table>
<%= link_to "Filter", url_for(:people, :search)%>
  <tr>
    <% @people.first.attributes.keys.each do |header| %>
      <th>
      <%= header %>
      </a>
      </th>
    <% end %>
  </tr>

  <% @people.each do |person| %>
    <tr>
    <% person.attributes.values.each_with_index do |value, index| %>
      <td>
        
      <% if index == 1%>
        <%= link_to value, url_for(:people, :index, :id => person.id )%>
      <% else %>
        <%= value %>
      <% end %>
      </td>
    <% end %> 
    </tr>
    <% end %>

</table>
</body>
</html>