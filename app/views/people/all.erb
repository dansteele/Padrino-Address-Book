<!DOCTYPE html>
<html>
<head>
  <title>All people</title>
</head>
<body>
<table>
  <tr>
    <% @people.first.attributes.keys.each do |header| %>
      <th>
      <%= header %>
      </a>
      </th>
    <% end %>
  </tr>

  <% @people.each do |person| %>
    <tr>
    <% person.attributes.values.each_with_index do |value, index| %>
      <td>
      <% if index == 1%>
        <a href="/person/<%=@people[index].id%>">
        <%= value %>
        </a>
      <% else %>
        <%= value %>
      <% end %>
      </td>
    <% end %> 
    </tr>
    <% end %>

</table>
</body>
</html>