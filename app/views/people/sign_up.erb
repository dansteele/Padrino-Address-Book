<!DOCTYPE html>
<html>
<head>
  <title>Sign up</title>
</head>
<body>

<% if @message %>
  <p><%=@message%></form>
<% end %>

<% form_tag "/person/signup" do%>
  <% field_set_tag do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  <% end %>

  <% field_set_tag do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  <% end %>


  <% field_set_tag do %>
    <%= label_tag :password %>
    <%= text_field_tag :password %>
  <% end %>

  <%= submit_tag "Save" %>

<%end%>
</body>
</html>